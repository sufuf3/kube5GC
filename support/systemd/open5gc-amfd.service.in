[Unit]
Description=NextEPC AMF Daemon
After=networking.service

[Service]
Type=simple

User=nextepc
Group=nextepc

RuntimeDirectory=open5gc-amfd
PIDFile=@LIB_DIR@/run/open5gc-amfd/pid

Restart=always
ExecStart=@BIN_DIR@/open5gc-amfd -f @SYSCONF_DIR@/open5gc/mme.conf
RestartSec=2
RestartPreventExitStatus=1

[Install]
WantedBy=multi-user.target
