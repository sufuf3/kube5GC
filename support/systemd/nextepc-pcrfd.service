[Unit]
Description=NextEPC PCRF Daemon
BindTo=mongodb.service
After=networking.service mongodb.service

[Service]
Type=simple

User=open5gc
Group=open5gc

RuntimeDirectory=nextepc-pcrfd
PIDFile=/home/wirelab/Downloads/nctu_5gc/install/lib/run/nextepc-pcrfd/pid

Restart=always
ExecStart=/home/wirelab/Downloads/nctu_5gc/install/bin/nextepc-pcrfd -f /home/wirelab/Downloads/nctu_5gc/install/etc/open5gc/pcrf.conf
RestartSec=2
RestartPreventExitStatus=1

[Install]
WantedBy=multi-user.target
