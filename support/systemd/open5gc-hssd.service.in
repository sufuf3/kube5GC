[Unit]
Description=NextEPC HSS Daemon
BindTo=mongodb.service
After=networking.service mongodb.service

[Service]
Type=simple

User=nextepc
Group=nextepc

RuntimeDirectory=open5gc-hssd
PIDFile=@LIB_DIR@/run/open5gc-hssd/pid

Restart=always
ExecStart=@BIN_DIR@/open5gc-hssd -f @SYSCONF_DIR@/open5gc/hss.conf
RestartSec=2
RestartPreventExitStatus=1

[Install]
WantedBy=multi-user.target
