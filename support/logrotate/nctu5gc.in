@LOCALSTATE_DIR@/log/nctu5gc/*.log {
    daily
    sharedscripts
    missingok
    compress
    rotate 14
    create 640 nctu5gc nctu5gc

    postrotate
        for i in pcrfd hssd amfd smf upf ngcd; do
            if [ -e @LOCALSTATE_DIR@/run/nctu5gc-$i/pid ] ; then
                kill -HUP `cat @LOCALSTATE_DIR@/run/nctu5gc-$i/pid`
            fi
        done
    endscript
}
