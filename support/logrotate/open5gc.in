@LOCALSTATE_DIR@/log/open5gc/*.log {
    daily
    sharedscripts
    missingok
    compress
    rotate 14
    create 640 open5gc open5gc

    postrotate
        for i in pcrfd hssd amfd smf upf ngcd; do
            if [ -e @LOCALSTATE_DIR@/run/open5gc-$i/pid ] ; then
                kill -HUP `cat @LOCALSTATE_DIR@/run/open5gc-$i/pid`
            fi
        done
    endscript
}
